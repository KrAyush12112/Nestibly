<%- include('partials/Header') %>
<body class="bg-gradient-to-br from-slate-50 to-slate-100">
    <%- include('partials/nav') %>
    
    <div class="py-12">
        <div class="text-center mb-12 animate-fade-in">
            <h1 class="font-extrabold text-5xl mt-5 bg-gradient-to-r from-emerald-600 to-blue-600 bg-clip-text text-transparent">
                ‚ù§Ô∏è Your Bookings
            </h1>
            <p class="text-gray-600 text-lg mt-2">Here are your booked homes</p>
            <div class="w-24 h-1 bg-gradient-to-r from-emerald-600 to-blue-600 mx-auto mt-4 rounded-full"></div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mt-8 mx-auto px-4 max-w-7xl">
            <% if (home && home.length > 0) { %>
                <% home.forEach((home, index) => { %>
                <div class="bg-white rounded-3xl shadow-lg overflow-hidden relative group hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 animate-slide-up" style="animation-delay: <%= index * 100 %>ms">
                    
                    <div class="relative overflow-hidden h-56">
                        <img src="<%= home.homeId.image[0] %>" alt="Home Image" class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500" />
                        <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
                    </div>

                    <div class="p-6 space-y-4">
                        <h2 class="text-2xl font-bold text-gray-800 group-hover:text-emerald-600 transition-colors duration-300">
                            <%= home.homeId.title %>
                        </h2>
                        
                        <p class="text-sm text-gray-600 flex items-center">
                            <svg class="w-5 h-5 mr-2 text-emerald-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                            </svg>
                            <%= home.homeId.location %>
                        </p>

                        <div class="border-t border-b py-4 space-y-2">
                            <div class="flex justify-between items-center">
                                <span class="text-sm font-semibold text-gray-700">Check-In:</span>
                                <span class="text-sm text-gray-600"><%= new Date(home.checkIn).toLocaleDateString() %></span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-sm font-semibold text-gray-700">Check-Out:</span>
                                <span class="text-sm text-gray-600"><%= new Date(home.checkOut).toLocaleDateString() %></span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-sm font-semibold text-gray-700">Guests:</span>
                                <span class="text-sm text-gray-600"><%= home.guests %></span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-sm font-semibold text-gray-700">Duration:</span>
                                <span class="text-sm text-gray-600"><%= home.night %> Night<%= home.night > 1 ? 's' : '' %></span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-sm font-semibold text-gray-700">Ref ID:</span>
                                <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded"><%= home.bookingRef %></span>
                            </div>
                        </div>
                        
                        <div class="bg-gradient-to-r from-emerald-50 to-blue-50 p-4 rounded-xl">
                            <p class="text-3xl font-extrabold bg-gradient-to-r from-emerald-600 to-blue-600 bg-clip-text text-transparent">
                                ‚Çπ <%= home.totalPrice %>
                            </p>
                            <p class="text-xs text-gray-600 mt-1">Total Booking Amount</p>
                        </div>

                        <div class="flex gap-3 pt-2">
                            <a href="/detailed-view/<%= home.homeId._id  %>" class="flex-1 text-center px-4 py-3 bg-gradient-to-r from-emerald-600 to-emerald-700 text-white rounded-xl hover:shadow-lg hover:scale-105 transition-all duration-300 font-semibold text-sm">
                                 View Details
                            </a>
                            <form action="/bookings/<%= home._id %>/cancel" method="POST" class="flex-1" onsubmit="return confirm('Are you sure you want to cancel this booking? This action cannot be undone.');">
                                <button type="submit" class="w-full px-4 py-3 bg-gradient-to-r from-red-500 to-red-600 text-white rounded-xl hover:shadow-lg hover:scale-105 transition-all duration-300 font-semibold text-sm">
                                    Cancel
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <% }) %>
            <% } else { %>
                <div class="col-span-full flex flex-col items-center justify-center py-16">
                    <p class="text-center text-gray-600 text-xl mb-4">üòî No booking yet</p>
                    <a href="/" class="px-8 py-3 bg-gradient-to-r from-emerald-600 to-blue-600 text-white rounded-xl hover:shadow-lg transform hover:scale-105 transition-all duration-300 font-semibold">
                        ‚ú® Explore Homes
                    </a>
                </div>
            <% } %>
        </div>
    </div>

    <style>
        @keyframes fade-in {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        @keyframes slide-up {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-fade-in { animation: fade-in 0.6s ease-out; }
        .animate-slide-up { animation: slide-up 0.6s ease-out forwards; }
    </style>
</body>
</html>
