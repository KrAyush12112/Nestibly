<%- include('../partials/Header') %>
<body class="min-h-screen flex flex-col">
    <%- include('../partials/nav') %>
    <div class="bg-gradient-to-br from-emerald-50 via-white to-blue-50 flex items-center justify-center flex-grow">
        <div class="flex w-full max-w-5xl mx-auto shadow-2xl rounded-2xl overflow-hidden">
            
            <!-- Left Side - Image -->
            <div class="hidden lg:flex lg:w-1/2 bg-gradient-to-br from-emerald-500 to-emerald-700 items-center justify-center p-8">
                <div class="text-center text-white">
                    <svg class="w-32 h-32 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                    <h3 class="text-3xl font-bold mb-4">Secure Access</h3>
                    <p class="text-emerald-100 text-lg">Your account is protected with enterprise-grade security</p>
                </div>
            </div>

            <!-- Right Side - Form -->
            <div class="w-full lg:w-1/2 bg-white p-8 md:p-12">
                <h2 class="text-4xl font-bold text-gray-800 mb-2">Welcome Back</h2>
                <p class="text-gray-500 mb-8">Sign in to your account to continue</p>
                
                <%- include('../partials/errorView') %>
                
                <form action="/auth/Log-in" method="POST" class="space-y-6">
                    <!-- Email Input -->
                    <div>
                        <label for="email" class="block text-gray-700 text-sm font-semibold mb-3">Email Address</label>
                        <input type="email" id="email" name="email"
                            class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-emerald-500 focus:ring-2 focus:ring-emerald-200 transition"
                            placeholder="you@example.com" required>
                    </div>

                    <!-- Password Input -->
                    <div>
                        <label for="password" class="block text-gray-700 text-sm font-semibold mb-3">Password</label>
                        <input type="password" id="password" name="password"
                            class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-emerald-500 focus:ring-2 focus:ring-emerald-200 transition"
                            placeholder="••••••••" required>
                    </div>

                    <!-- Terms Checkbox -->
                    <div class="flex items-center space-x-3">
                        <input type="checkbox" id="terms" name="terms"
                            class="w-5 h-5 text-emerald-600 rounded focus:ring-2 focus:ring-emerald-500 cursor-pointer" required>
                        <label for="terms" class="text-gray-700 text-sm">I agree to the <a href="/terms"
                                class="text-emerald-600 font-semibold hover:underline">Terms and Conditions</a></label>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit"
                        class="w-full bg-gradient-to-r from-emerald-600 to-emerald-700 text-white py-3 px-4 rounded-lg font-semibold hover:from-emerald-700 hover:to-emerald-800 focus:outline-none focus:ring-4 focus:ring-emerald-300 transition duration-300 transform hover:scale-105">
                        Login
                    </button>
                </form>

                <!-- Divider -->
                <div class="my-6 flex items-center">
                    <div class="flex-grow border-t border-gray-300"></div>
                    <span class="px-4 text-gray-500 text-sm">or</span>
                    <div class="flex-grow border-t border-gray-300"></div>
                </div>

                <!-- Links -->
                <div class="space-y-3 text-center text-sm">
                    <div>
                        <a href="/forgot-password" class="text-emerald-600 font-semibold hover:text-emerald-700 transition">Forgot Password?</a>
                    </div>
                    <p class="text-gray-600">
                        Don't have an account? 
                        <a href="/auth/Sign-up" class="text-emerald-600 font-semibold hover:text-emerald-700 transition">
                            Sign Up
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

