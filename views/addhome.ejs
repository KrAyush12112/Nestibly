<%- include('partials/Header') %>

<body class="bg-gradient-to-br from-indigo-50 to-blue-50 text-gray-800 font-sans min-h-screen">
  <%- include('partials/nav') %>

  <main class="max-w-2xl mx-auto mt-12 mb-12">
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <!-- Header -->
      <div class="bg-gradient-to-r from-indigo-600 to-blue-600 px-8 py-10">
        <h1 class="text-3xl font-bold text-white text-center">
          <%= editing ? ' Update Your Home' : ' Register Your Home' %>
        </h1>
        <p class="text-indigo-100 text-center mt-2">Fill in the details to get started</p>
      </div>

      <!-- Form -->
      <form action="<%= editing ? '/host/edit-home' : '/host/add-home' %>" method="POST" class="p-8 space-y-6" enctype="multipart/form-data">
        
        <!-- Title -->
        <div class="group">
          <label for="title" class="block text-sm font-semibold text-gray-700 mb-2">Home Title</label>
          <input
            type="text"
            value="<%= editing ? homeFound.title : '' %>"
            name="title"
            id="title"
            placeholder="e.g. Cozy Cottage"
            required
            class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition outline-none"
          />
        </div>

        <!-- Location -->
        <div class="group">
          <label for="location" class="block text-sm font-semibold text-gray-700 mb-2">üìç Location</label>
          <input
            type="text"
            value="<%= editing ? homeFound.location : '' %>"
            name="location"
            id="location"
            placeholder="e.g. Manali"
            required
            class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition outline-none"
          />
        </div>

        <!-- Price & Max Guests (Two columns) -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="group">
            <label for="price" class="block text-sm font-semibold text-gray-700 mb-2">üí∞ Price (‚Çπ)</label>
            <input
              type="number"
              value="<%= editing ? homeFound.price : '' %>"
              name="price"
              id="price"
              placeholder="e.g. 2500"
              required
              class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition outline-none"
            />
          </div>

          <div class="group">
            <label for="maxGuests" class="block text-sm font-semibold text-gray-700 mb-2">üë• Max Guests</label>
            <input
              type="number"
              name="maxGuests"
              id="maxGuests"
              value="<%= editing ? homeFound.maxGuests : '' %>"
              placeholder="e.g. 2"
              required
              class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition outline-none"
            />
          </div>
        </div>

        <!-- Description -->
        <div class="group">
          <label for="description" class="block text-sm font-semibold text-gray-700 mb-2">üìù Description</label>
          <textarea
            name="description"
            id="description"
            rows="4"
            placeholder="Describe your home - amenities, views, vibe, etc."
            required
            class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition outline-none resize-none"
          ><%= editing ? homeFound.description : '' %></textarea>
        </div>

        <!-- Image Upload -->
        <div class="group">
            <label for="image" class="block text-sm font-semibold text-gray-700 mb-2">üñºÔ∏è Images</label>
            <div class="relative border-2 border-dashed border-indigo-300 rounded-lg p-6 text-center hover:border-indigo-500 transition cursor-pointer bg-indigo-50">
            <input
              type="file"
              multiple
              accept="image/*"
              name="image"
              id="image"
              <%= editing ? '' : 'required' %>
              class="absolute inset-0 w-full h-full opacity-0 cursor-pointer"
              onchange="displayFileCount(this)"
            />
            <div id="fileCount" class="text-sm text-gray-600 mt-2"></div>
            </div>

      <script>
      function displayFileCount(input) {
        const fileCount = document.getElementById('fileCount');
        const count = input.files.length;
        if (count > 0) {
        const fileNames = Array.from(input.files).map(f => f.name).join(', ');
        fileCount.innerHTML = `<span class="text-green-600 font-semibold">${count} file(s) selected:</span><br><span class="text-gray-500 text-xs">${fileNames}</span>`;
        } else {
        fileCount.innerHTML = '';
        }
      }
      </script>
            <div class="pointer-events-none">
              <p class="text-indigo-600 font-semibold">Drag images here or click to select (Maximum 10 files)</p>
              <p class="text-gray-500 text-sm mt-1">PNG, JPG, GIF up to 10MB</p>
              <p class="text-gray-500 font-semibold italic text-sm mt-1">*Hold Ctrl (or Cmd on Mac) to select multiple files</p>
            </div>
          </div>
        </div>

        <!-- Buttons -->
        <div class="flex gap-4 pt-6">
          <button
            type="submit"
            class="flex-1 bg-gradient-to-r from-green-500 to-green-600 text-white py-3 px-6 rounded-lg font-semibold hover:shadow-lg hover:from-green-600 hover:to-green-700 transition duration-200 transform hover:scale-105"
          >
            <%= editing ? 'Update Home' : ' Add Home' %>
          </button>
          <% if (editing) { %>
            <input type="hidden" name="id" value="<%= homeFound._id %>" />
          <% } %>
        </div>
      </form>
    </div>
  </main>
</body>
</html>
