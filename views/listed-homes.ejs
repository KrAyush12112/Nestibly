<%- include('partials/Header') %>

<body class="bg-gradient-to-br from-indigo-50 via-white to-purple-50 min-h-screen">
    <%- include('partials/nav') %>
    
    <!-- Header Section -->
    <div class="relative py-16 px-4 text-center overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-indigo-200 to-purple-200 opacity-30 blur-3xl"></div>
        <h1 class="relative font-black text-6xl md:text-7xl bg-clip-text text-transparent bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 mb-4">‚ú® Listed Homes</h1>
        <p class="relative text-lg text-gray-600 font-medium">Find your dream accommodation with ease</p>
        <div class="flex justify-center gap-4 mt-6">
            <div class="px-6 py-2 bg-indigo-100 rounded-full text-indigo-700 font-semibold">üè† <%= registeredHomes.length %> Homes</div>
        </div>
    </div>

    <!-- Grid Container -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mt-12 mx-4 lg:mx-16 pb-16">
        <% registeredHomes.forEach((home, index) => { %>
        <div class="group relative bg-white rounded-3xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-500 transform hover:scale-105 hover:-translate-y-3 animate-popout" style="animation-delay: <%= index * 0.1 %>s">
            
            <!-- Image Container -->
            <div class="relative h-64 overflow-hidden bg-gradient-to-br from-gray-200 to-gray-300">
                <img src="<%= home.image[0] %>" alt="Home Image" class="w-full h-full object-cover group-hover:scale-125 transition-transform duration-700" />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                
                <!-- Premium Badge -->
                <div class="absolute top-4 right-4 bg-gradient-to-r from-yellow-400 to-orange-500 text-white px-4 py-2 rounded-full text-sm font-bold shadow-lg backdrop-blur-sm">
                    #<%= index + 1 %>
                </div>
            </div>

            <!-- Content Container -->
            <div class="p-7 space-y-4 bg-gradient-to-b from-white to-gray-50">
                <h2 class="text-2xl font-black text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-purple-600 line-clamp-2 group-hover:from-purple-600 group-hover:to-pink-600 transition-all duration-300">
                    <%= home.title %>
                </h2>
                
                <div class="flex items-center gap-2 text-gray-700">
                    <span class="text-xl">üìç</span>
                    <p class="font-semibold text-sm"><%= home.location %></p>
                </div>
                
                <div class="bg-gradient-to-r from-indigo-50 to-purple-50 rounded-2xl p-4 border-2 border-indigo-200 backdrop-blur-sm">
                    <p class="text-3xl font-black text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-purple-600">
                        ‚Çπ<%= home.price %> <span class="text-xs text-gray-600 font-semibold">/night</span>
                    </p>
                </div>

                <!-- CTA Button -->
                <a href="/detailed-view/<%= home._id %>" class="inline-block w-full mt-6 px-4 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-bold rounded-xl hover:from-purple-600 hover:to-pink-600 hover:shadow-xl transition-all duration-300 text-center transform hover:scale-105 active:scale-95 flex items-center justify-center gap-2">
                    View Details <span class="text-lg">‚Üí</span>
                </a>
            </div>
        </div>
        <% }) %>
    </div>

    <style>
        @keyframes popout {
            0% {
                opacity: 0;
                transform: scale(0.8) translateY(20px);
            }
            100% {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }

        .animate-popout {
            animation: popout 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
            opacity: 0;
        }

        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
</body>
</html>
